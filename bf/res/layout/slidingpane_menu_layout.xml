<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingpane_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/li_personal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_personal_item_height"
        android:background="@color/skyblue"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_login"
            android:layout_width="@dimen/sliding_personal_item_image_height"
            android:layout_height="@dimen/sliding_personal_item_image_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/sliding_item_start_margin"
            android:layout_marginRight="@dimen/sliding_item_start_margin"
            android:src="@drawable/hed_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="积分：0      余额 ： 0"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_common_item_height"
        android:layout_marginLeft="@dimen/sliding_item_start_margin"
        android:layout_marginRight="@dimen/sliding_item_start_margin"
        android:layout_marginTop="@dimen/sliding_item_start_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="@dimen/sliding_common_item_image_height"
            android:layout_height="@dimen/sliding_common_item_image_height"
            android:layout_gravity="center"
            android:src="@drawable/menu_icon_home" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="left|center"
            android:text="@string/slidingmenu_item_home"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_common_item_height"
        android:layout_marginLeft="@dimen/sliding_item_start_margin"
        android:layout_marginRight="@dimen/sliding_item_start_margin"
        android:layout_marginTop="@dimen/sliding_item_start_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_order"
            android:layout_width="@dimen/sliding_common_item_image_height"
            android:layout_height="@dimen/sliding_common_item_image_height"
            android:layout_gravity="center"
            android:src="@drawable/menu_icon_order_list" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="left|center"
            android:text="@string/slidingmenu_item_order"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>